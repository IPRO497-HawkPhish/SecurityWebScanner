{
  "manifest_version": 3,
    "name": "HawkPhish",
    "description": "Web Scanner and Security Summarizer",
    "version": "2.0",
    "permissions": [
      "activeTab",
      "storage"
    ],

    "icons": {
      "16": "popup/logo/phish.png",
      "48": "popup/logo/phish.png",
      "128": "popup/logo/phish.png"
    },

    "action": {
      "default_popup": "popup/popup.html"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["script.js"],
        "css": ["assets/css/main.css"]
      }
    ],

    "web_accessible_resources": [{ 
      "resources": ["assets/icons/star-fill.svg", "assets/icons/star-half.svg", "assets/icons/star-empty.svg", "assets/icons/icons8-star-50-rf.png", "assets/icons/icons8-star-half-empty-50-r.png", "assets/icons/icons8-star-50-re.png", "assets/icons/icons8-star-50-gf.png", "assets/icons/icons8-star-half-empty-50-g.png"],
      "matches": ["<all_urls>"]
    }]
}
